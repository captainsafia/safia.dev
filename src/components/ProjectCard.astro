---
interface Props {
  title: string;
  description: string;
  url: string;
  accentColor?: string;
}

const { 
  title, 
  description, 
  url, 
  accentColor = 'var(--color-accent)' 
} = Astro.props;
---

<article class="project" style={`--project-accent: ${accentColor};`}>
  <a href={url} target="_blank" rel="noopener noreferrer" class="project-link">
    <h2 class="project-title">{title}</h2>
    <p class="project-description">{description}</p>
    <span class="project-url" aria-hidden="true">View on GitHub â†’</span>
  </a>
</article>

<style>
  .project {
    border: 1px solid var(--color-border);
    border-radius: 4px;
    background: white;
    transition: border-color 150ms ease;
  }

  @media (prefers-reduced-motion: reduce) {
    .project {
      transition: none;
    }
  }

  .project:hover,
  .project:focus-within {
    border-color: var(--project-accent);
  }

  .project-link {
    display: block;
    padding: 1.25rem;
    color: inherit;
    text-decoration: none;
  }

  .project-link:focus {
    outline: none;
  }

  .project-link:focus-visible {
    outline: 2px solid var(--project-accent);
    outline-offset: 2px;
  }

  .project-title {
    font-size: 1.0625rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .project-description {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .project-url {
    font-size: 0.8125rem;
    color: var(--project-accent);
  }

  @media print {
    .project {
      break-inside: avoid;
      border: 1px solid #ccc;
    }

    .project-url {
      display: none;
    }

    .project-link::after {
      content: ' (' attr(href) ')';
      font-size: 0.75rem;
      color: var(--color-text-muted);
    }
  }
</style>
